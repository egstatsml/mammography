def call_command(command):
    process = subprocess.Popen(command.split(' '),
                               stdout=subprocess.PIPE,
                               stderr=subprocess.PIPE)
    return process.communicate()

def my_call(arg = ' '):
    subprocess.call(arg, shell=True)
    print arg




def get_args(argv):
    if(len(argv) < 2):
        print('Must enter more than one argument')
        print(' -g = grain scan, -s = stem scan')
        sys.exit()

    elif( str(argv[1]) not in ('-g' ,'-s') ):
        print('Incorrect argument for scan')
        print(' -g = grain scan, -s = stem scan')
        print(str(argv[1]))
        sys.exit()
    else:
        if( str(argv[1]) in ('-g')):
            return '-g'
        else:
            return '-s'



if __name__ == "__main__":
    main()
